{% extends "xhtml_skeleton.jinja" %}

{% block body %}

{% if pg_meta.fleuronimg is defined %}
    <div class="fleuron">
        <img src="{{ pg_meta.fleuronimg }}" alt="fleuron image" />
    </div>
{% endif %}

{% if pg_meta.heading is defined %}
    <h2 class="chapter-heading {{ hdgalign|default('center') }}">{{ pg_meta.heading|e }}</h2>
{% endif %}
{% if pg_meta.subheading is defined %}
    <h3 class="chapter-heading {{ subalign|default('center') }}">{{ pg_meta.subheading|e }}</h3>
{% endif %}

{% if pg_meta.beg_raw %}{{ pg_meta.beg_raw }}{% endif %}

{{ chapter_content }}

{% if pg_meta.end_raw %}{{ pg_meta.end_raw }}{% endif %}

{% endblock %}


